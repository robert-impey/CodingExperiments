<Window x:Class="CalculateControlDigit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculateControlDigit"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="inputTextBox" HorizontalAlignment="Left" Height="23" Margin="108,16,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="calculateButton" Content="Calculate" HorizontalAlignment="Left" Margin="233,16,0,0" VerticalAlignment="Top" Width="75" Click="calculateButton_Click"/>
        <TextBox x:Name="controlDigitTextBox" HorizontalAlignment="Left" Height="23" Margin="108,53,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
        <Label x:Name="inputLabel" Content="Input Number" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label x:Name="controlDigitLabel" Content="Control Digit" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="errorLabel" Content="" HorizontalAlignment="Left" Margin="332,16,0,0" VerticalAlignment="Top" Foreground="Red"/>

    </Grid>
</Window>
